{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki",
		"wikimedia/jsduck"
	],
	"globals": {
		"ve": "writable",
		"VisualEditorSupportCheck": "writable",
		"OO": "readonly",
		"unicodeJS": "readonly",
		"RangeFix": "readonly",
		"Papa": "readonly"
	},
	"rules": {
		"no-jquery/no-extend": "error",
		"no-jquery/no-visibility": "error",
		"mediawiki/valid-package-file-require": "off",
		"max-statements-per-line": [ "error", { "max": 1 } ],
		"max-len": "off"
	},
	"plugins": [ "html" ],
	"settings": {
		"html/indent": "+tab",
		"html/report-bad-indent": "error"
	},
	"overrides": [
		{
			"files": [
				"i18n/**/{en,qqq}.json"
			],
			"rules": {
				"sort-keys": "error"
			}
		}
	]
}
